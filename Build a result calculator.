#include <stdio.h>
int main() {
    float s1, s2, s3, total, avg;
    printf("Enter marks of 3 subjects: ");
    scanf("%f %f %f", &s1, &s2, &s3);
    total = s1 + s2 + s3;
    avg = total / 3;
    printf("Total = %.2f\nAverage = %.2f\n", total, avg);
    if (avg >= 90) printf("Grade: A+\n");
    else if (avg >= 75) printf("Grade: A\n");
    else if (avg >= 60) printf("Grade: B\n");
    else if (avg >= 40) printf("Grade: C\n");
    else printf("Grade: Fail\n");
    return 0;
}
